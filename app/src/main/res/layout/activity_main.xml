<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/mainimage"
        android:src="@drawable/logo"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/maintext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME WOLFPACK\nTO SMART AUK"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:paddingTop="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mainln"
        app:layout_constraintTop_toBottomOf="@id/mainimage"/>


    <LinearLayout
        android:id="@+id/mainln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/mainsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:backgroundTint="@color/red"
            android:paddingLeft="10sp"
            android:paddingRight="10sp" />

        <Button
            android:id="@+id/mainsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:backgroundTint="@color/red"
            android:paddingLeft="10sp"
            android:paddingRight="10sp" />

        <Button
            android:id="@+id/moodlesignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up with moodle"
            android:backgroundTint="@color/red"
            android:paddingLeft="10sp"
            android:paddingRight="10sp" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>